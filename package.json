{
  "name": "query-weaver",
  "version": "0.0.2",
  "description": "SQL query builder using template string literal",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.mjs",
  "types": "dist/esm/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "node -r esbuild-register ./cjs-build.ts",
    "build:esm": "node -r esbuild-register ./esm-build.ts",
    "prettier": "prettier --check . --ignore-path .gitignore",
    "prettier:fix": "npm run prettier -- --write",
    "lint": "eslint src --ext .ts --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install"
  },
  "author": "kikuchan98@gmail.com",
  "homepage": "https://github.com/kikuchan/query-weaver#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/pg": "^8.6.6",
    "@types/pg-escape": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "esbuild": "^0.16.17",
    "esbuild-node-externals": "^1.6.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pg-escape": "^0.2.0"
  }
}
