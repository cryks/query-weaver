{
  "name": "query-weaver",
  "version": "0.0.8",
  "description": "SQL query builder using template string literal",
  "main": "./dist/index.cjs.js",
  "module": "./dist/index.esm.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.mjs",
      "require": "./dist/index.cjs.js"
    }
  },
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "build": "npm run clean && npm run build:esbuild && npm run build:types",
    "build:esbuild": "node -r esbuild-register build.ts",
    "build:types": "tsc --declaration --emitDeclarationOnly --declarationDir './dist'",
    "format": "prettier --check . --ignore-path .gitignore",
    "format:fix": "npm run format -- --write",
    "lint": "eslint src --ext .ts --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit -p tsconfig.json",
    "prepare": "husky install"
  },
  "author": "kikuchan98@gmail.com",
  "homepage": "https://github.com/kikuchan/query-weaver#readme",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/pg": "^8.6.6",
    "@types/pg-escape": "^0.2.1",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "esbuild": "^0.16.17",
    "esbuild-jest": "^0.5.0",
    "esbuild-node-externals": "^1.6.0",
    "esbuild-register": "^3.4.2",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "pg": "^8.9.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "pg-escape": "^0.2.0"
  }
}
